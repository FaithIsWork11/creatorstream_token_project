# RPC URL for the Stratos blockchain node
STRATOS_RPC_URL=https://rpc.YOUR-STRATOS-NODE.org

# Your private wallet key WITHOUT the '0x' prefix (64 hex characters)
PRIVATE_KEY=your_64_char_hex_private_key_without_0x

# Stratos chain ID (e.g., 2047 for Stratos Testnet)
CHAIN_ID=your_chain_id

# ERC-20 Token Configuration
TOKEN_CONTRACT_ADDRESS=0xYourTokenContractAddress
TOKEN_DECIMALS=18
TOKEN_SYMBOL=YourTokenSymbol

# Gas settings for transactions
GAS_LIMIT=21000
GAS_PRICE=20000000000  # 20 Gwei

# Receiver address for test transfers
RECEIVER_ADDRESS=0xReceiverAddress

# Logging & Behavior Settings
LOG_LEVEL=info
TRANSACTION_TIMEOUT=300  # in seconds

# Optional API Keys (e.g., for explorers or analytics services)
API_KEY=your_api_key_if_required
API_SECRET=your_api_secret_if_required
# Note: Ensure to replace the placeholders with actual values before using this configuration.
